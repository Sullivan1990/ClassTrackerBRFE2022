@model IEnumerable<ClassTrackerBRFE2022.Models.TeacherModels.Teacher>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

@using (Html.BeginForm("Filter", "Teacher", FormMethod.Post)) {
    <select asp-items="@ViewBag.TeacherDDL" name="teacherDDL"></select>
    <input type="submit" value="submit"/>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TeacherId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TeacherId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.ActionLink("Classes", "TafeClassesForTeacher", "TafeClass", new { id=item.TeacherId }, new {@class="btn btn-primary"})
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {  id=item.TeacherId }) |
                @Html.ActionLink("Details", "Details", new { id=item.TeacherId }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.TeacherId })
            </td>
        </tr>
}
    </tbody>
</table>
